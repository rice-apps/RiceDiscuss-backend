type Post {
    Title: String!,
    PostDate: Date!,
    PostCreator: User!,
    Upvotes: Int!,
    Downvotes: Int!,
    Upvoters: List[User!],
    PostID: Int!,
    TypeOfPost: PostType!
}

enum PostType {
    EVENT
    JOB
    DISCUSSION
    NOTICE
}

type Event {
    EventDate: Date!,
    Description: String!
}

type Job {
    Location: String!,
    IsPaid: Boolean!,
    RespondDeadline: Date!,
    StartDate: Date,
    EndDate: Date,
    Description: String!
}

type Discussion {
    Link: String,
    Body: String,
    Comments: List[Comment!],
}

type Comment {
    Body: String!,
    Upvotes: Int!,
    Downvotes: Int!,
    CommentDate: Date!,
    CommentCreator: User!
}

type User {
    Username: String!,
    College: String!,
    Posts: List[Post!],
    DateCreated: Date!,
    IsBanned: Boolean!,
}

type Date {
    UnixTime: Int!,
    TimeZone: String!,
}
